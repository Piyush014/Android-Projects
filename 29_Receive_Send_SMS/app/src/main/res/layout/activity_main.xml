<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F0F0"
    tools:context=".MainActivity">

    <!-- AppBarLayout with MaterialToolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Broadcast Receiver Demo"
            app:titleTextColor="@android:color/white"
            app:popupTheme="@style/AppTheme" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click on the button to send the message!"
            android:padding="16dp"
            android:background="@drawable/shape_textview"
            android:textColor="#000000"
            android:textSize="16sp"
            android:backgroundTint="#8E8E8E"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/editText_mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="+91"
            android:width="180dp"
            android:inputType="phone"
            android:background="@drawable/shape_edittext"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/editText_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your message"
            android:inputType="text"
            android:width="180dp"
            android:background="@drawable/shape_edittext"
            android:padding="10dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/button_send_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send SMS"
            android:backgroundTint="#555555"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>
</LinearLayout>
